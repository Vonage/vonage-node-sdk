{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@vonage/*": [
        "packages/*/lib"
      ]
    }
  },
  "ts-node": {
    "esm": true,
    "skipLibCheck": false
  }
}
