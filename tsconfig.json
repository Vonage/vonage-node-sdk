{
    "compilerOptions": {
        "sourceMap": true,
        "removeComments": true,
        "lib": [
            "ES6"
        ],

        "strict": false,
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "pretty": true,
        "preserveSymlinks": true,
        "resolveJsonModule": true,

        "types": [
            "jest",
            "node"
        ],

        "noImplicitAny": false,
        "noUnusedLocals": false,

        "declaration": true,
        "composite": true,
        "noEmit": false,
        "baseUrl": "."
    },

    "ts-node": {
        "esm": true
    }
}
