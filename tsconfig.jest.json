{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "isolatedModules": true,
    "inlineSourceMap": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "**/dist",
    "**/*.d.ts"
  ]
}
